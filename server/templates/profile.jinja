{% extends "base.jinja" %}

{% block main %}

<h1>User Profile</h1>
<h2>Welcome, {{ user_id }}</h2>

<form method="POST" action="/profile">
    <label for="profile_data">Update your profile data:</label><br><br>
    <textarea name="profile_data" rows="10" cols="50">{{ profile_data }}</textarea><br><br>
    <button type="submit">Save</button>
</form>

<br>
<a href="{{ url_for('logout') }}">Logout</a>

{% endblock main %}